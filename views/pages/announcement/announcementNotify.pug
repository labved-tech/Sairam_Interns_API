extends ./../../base.pug

block css-files
    link(href='/css/pages/wizard/wizard-4.css' rel='stylesheet' type='text/css')

block js-files
    script(src='/js/KTAppSettings.js')
    script(src='/plugins/global/axios/axios.min.js')
    script(src='/js/pages/example/exampleFormControls.js')

block content
    #kt_content(class='content d-flex flex-column flex-column-fluid')
        include ./../../partials/_subheader/subheader-v1.pug
        // begin::Entry
        div(class='d-flex flex-column-fluid')
            // begin::Container
            div(class='container')
                // begin::Card
                div(class='card card-custom')
                    div(class='card-header')
                        h3(class='card-title')
                            | Announcement Notification Form
                    div(class='card-body')
                        // begin::Form
                        form#form_announcementNotify(class='form' action='http://localhost:3000/api/v1/announcement-notification')
                            div(class='row')
                                div(class='col-xl-2')
                                div(class='col-xl-8')
                                    div(class='my-5')
                                        h3(class=' text-dark font-weight-bold mb-10') General
                                        div(class='form-group row')
                                            label(class='col-3 form-control-label') Announcement Id
                                            div(class='col-9')
                                                input(type='text' class='form-control' name='announcementId' placeholder='ex. 5fa6574d564cd01840c6cfd9')
                                        div(class='form-group row')
                                            label(class='col-3 form-control-label') Priority
                                            div(class='col-9')
                                                input(type='text' class='form-control' name='priority' placeholder='ex. 6')
                                                span(class='form-text text-muted') Priortizing before sending emails to target.
                                        h3(class=' text-dark font-weight-bold mb-10') Recipient
                                        div(class='form-group row')
                                            label(class='col-3 form-control-label') Recipient Id
                                            div(class='col-9')
                                                input(type='text' class='form-control' name='recipient-recipientId' placeholder='ex.  5fa6574d564cd01840c6cfd9')
                                        div(class='form-group row')
                                            label(class='col-3 form-control-label') Name
                                            div(class='col-9')
                                                input(type='text' class='form-control' name='recipientName' placeholder='ex. Alex Rider')
                                        div(class='form-group row')
                                            label(class='col-3 form-control-label') Email
                                            div(class='col-9')
                                                input(type='text' class='form-control' name='recipientEmail' placeholder='ex. Alexrider@gmail.com')
                                        div(class='form-group row')
                                            label(class='col-3 col-form-label') Is Email Sent
                                            div(class='col-9')
                                                span(class='switch switch-sm')
                                                    label
                                                        input(type='checkbox' checked='checked' name='isEmailSent')
                                                        span
                                        div(class='form-group row')
                                            label(class='col-3 form-control-label') Seen At
                                            div(class='col-9')
                                                input(type='text' class='form-control' name='seenAt' placeholder='ex. dd/mm/yyyy')
                                        div(class='form-group row')
                                            label(class='col-3 form-control-label') Sent At
                                            div(class='col-9')
                                                input(type='text' class='form-control' name='sentAt' placeholder='ex. dd/mm/yyyy')
                            div(class='card-footer text-right')
                                div(class='row')
                                    div(class='col-lg-9 ml-lg-auto')
                                        button(type='submit' class='btn btn-primary font-weight-bold mr-2' name='submitButton') Submit
                                        button(type='reset' class='btn btn-light-primary font-weight-bold') Cancel
                        // end::Form
                // end::Card
            // end::Container
        // end::Entry
