extends ./../../base.pug

block css-files

block js-files
    script(src='/plugins/global/axios/axios.min.js')
    script(src='/js/pages/crud/myForm/directory/directoryForm.js' )
    

block content
    #kt_content(class='content d-flex flex-column flex-column-fluid')
        include ./../../partials/_subheader/subheader-v1.pug
        // begin::Entry
        div(class='d-flex flex-column-fluid')
            // begin::Container
            div(class='container')
                // begin::Card
                div(class='card card-custom')
                    div(class='card-header')
                        h3(class='card-title')
                            | Directory Attributes Groups Form
                    div(class='card-body')
                        // begin::Form
                        form#DirectoryAttributesGroupsForm(class='form')
                            div(class='row')
                                div(class='col-xl-2')
                                div(class='col-xl-8')
                                    div(class='my-5')  
                                        h3(class=' text-dark font-weight-bold mb-10') General

                                        // Name
                                        div(class='form-group row')
                                            label(class='col-3 col-form-label form-control-label text-right') Name
                                                span(class='text-danger')  *
                                            div(class='col-6')
                                                input#dagName(type='text' class='form-control' name='dagName' placeholder='ex. Vignesh')
                                                span(class='form-text text-muted') Enter your name

                                        // dagAttributes
                                        h3(class=' text-dark font-weight-bold mb-10') Attributes

                                        #dlAttributes
                                            div(class='form-group row')
                                                label(class='col-3 col-form-label form-control-label text-right') Attributes
                                                div(data-repeater-list='', class='col-16')
                                                    div(data-repeater-item='', class='form-group row')
                                                        div(class='col-2')
                                                            input#dlId(type='text', class='form-control', placeholder='Id' name='dlId')
                                                        div(class='col-2')
                                                            input#dlName(type='text', class='form-control', placeholder='Name' name='dlName')
                                                        div(class='col-2')
                                                            input#dlType(type='text', class='form-control', placeholder='Type' name='dlType')
                                                        div(class='col-2')
                                                            input#dlDescription(type='text', class='form-control', placeholder='Description' name='dlDescription')
                                                        div(class='col-2')
                                                            input#dlNotes(type='text', class='form-control', placeholder='Notes' name='dlNotes')
                                                        div(class='col-2')
                                                            input#dlStatus(type='text', class='form-control', placeholder='Status' name='dlStatus')