extends ./../../base.pug

block css-files

block js-files
    script(src='/plugins/global/axios/axios.min.js')
    script(src='/js/pages/crud/myForm/ecommerce/ecommerceStockDiscountForm.js' )
    

block content
    #kt_content(class='content d-flex flex-column flex-column-fluid')
        include ./../../partials/_subheader/subheader-v1.pug
        // begin::Entry
        div(class='d-flex flex-column-fluid')
            // begin::Container
            div(class='container')
                // begin::Card
                div(class='card card-custom')
                    div(class='card-header')
                        h3(class='card-title')
                            | Ecommerce Stock : Discount
                    div(class='card-body')
                        // begin::Form
                        form#createEcommerceStockDiscountForm(class='form')
                            div(class='row')
                                div(class='col-xl-2')
                                div(class='col-xl-8')
                                    div(class='my-5') 

                                        h3(class=' text-dark font-weight-bold mb-10') General

                                        div(class='form-group row')
                                            label(class='col-3 col-form-label form-control-label text-right') Discount Vol
                                            div(class='col-4')
                                                input#esdDiscountVol(type='text' class='form-control' value='' name='esdDiscountVol' placeholder='ex. Gokul Vignesh')
                                                span(class='form-text text-muted')                                  

                                        div(class='form-group row')
                                            label(class='col-3 col-form-label form-control-label text-right') Discount Percent
                                            div(class='col-4')
                                                input#esdDiscountPercent(type='text' class='form-control' value='' name='esdDiscountPercent' placeholder='')
                                                span(class='form-text text-muted')                                  


                                        div(class='form-group row')
                                            label(class='col-3 col-form-label form-control-label text-right') Name 
                                            div(class='col-6')
                                                input#esdName(type='text' class='form-control' name='esdName' placeholder='')                                      

                                        div(class='form-group row mb-1')
                                            label(class='col-3 col-form-label form-control-label text-right' for='esdDescription')
                                                | Description 
                                            div(class='col-9 ')
                                                textarea#esdDescription(class='form-control' name='esdDescription' rows='3')
                                                span(class='form-text text-muted')

                            div(class='card-footer')
                                div(class='row  text-right')
                                    div(class='col-lg-9 ml-lg-auto')
                                        button#createEcommerceStockDiscountFormSubmitButton(type='submit' class='btn btn-primary font-weight-bold mr-2') Submit
                                        button(type='reset' class='btn btn-light-primary font-weight-bold') Cancel
                        // end::Form
                // end::Card
            // end::Container
        // end::Entry