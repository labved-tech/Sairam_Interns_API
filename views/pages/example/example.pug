extends ./../../base.pug

block css-files
    link(href='/css/pages/wizard/wizard-4.css' rel='stylesheet' type='text/css')

block js-files
    script(src='/js/KTAppSettings.js')
    script(src='/plugins/global/axios/axios.min.js')
    script(src='/js/pages/example/exampleFormControls.js')

block content
    #kt_content(class='content d-flex flex-column flex-column-fluid')
        include ./../../partials/_subheader/subheader-v1.pug
        // begin::Entry
        div(class='d-flex flex-column-fluid')
            // begin::Container
            div(class='container-fluid')
                div(class='row')
                    div(class='col-lg-12')
                        // begin::Card
                        div(class='card card-custom')
                            div(class='card-header')
                                h3(class='card-title')
                                    | Example Form
                            // begin::Form
                            form#kt_form_1(class='form')
                                div(class='card-body')
                                    div(class='form-group')
                                        div(class='col-lg-3')
                                            label(class='form-control-label ') Email
                                            span(class='text-danger')  *
                                            input(type='text' class='form-control' name='email' placeholder='Enter your email')
                                            span(class='form-text text-muted') We'll never share your email with anyone else.                                   
                                    div(class='form-group')
                                        div(class='col-lg-3')
                                            label(class='form-control-label') Password
                                            span(class='text-danger')  *
                                            input(type='text' class='form-control' name='password' placeholder='password')
                                            span(class='form-text text-muted') minimum 8 characters                                   
                                    div(class='form-group')
                                        div(class='col-lg-3')
                                            label(for='exampleSelect1')
                                                | Dropdown List Box
                                                span(class='text-danger') *
                                            select#exampleSelect1(class='form-control')
                                                option 1
                                                option 2
                                                option 3
                                                option 4
                                                option 5
                                    div(class='form-group')
                                        div(class='col-lg-3')
                                            label(for='exampleSelect2')
                                                | Dropdown List Box - Multiple
                                                span(class='text-danger') *
                                            select#exampleSelect2(multiple='' class='form-control')
                                                option 1
                                                option 2
                                                option 3
                                                option 4
                                                option 5
                                    div(class='form-group mb-1')
                                        div(class='col-lg-3')
                                            label(for='exampleTextarea')
                                                | Example textarea 
                                                span(class='text-danger') *
                                            textarea#exampleTextarea(class='form-control' rows='3')
                                    div(class='form-group')
                                        div(class='col-lg-3')
                                            label Inline Checkboxes
                                            div(class='checkbox-inline')
                                                label(class='checkbox')
                                                    input(type='checkbox' name='Checkboxes2')
                                                    span
                                                    | Option 1
                                                label(class='checkbox')
                                                    input(type='checkbox' name='Checkboxes2')
                                                    span
                                                    | Option 2
                                                label(class='checkbox')
                                                    input(type='checkbox' name='Checkboxes2')
                                                    span
                                                    | Option 3
                                    div(class='form-group')
                                        div(class='col-lg-3')
                                            label Inline radios
                                            div(class='radio-inline')
                                                label(class='radio')
                                                    input(type='radio' name='radios2')
                                                    span
                                                    |                                 Option 1
                                                label(class='radio')
                                                    input(type='radio' name='radios2')
                                                    span
                                                    |                                 Option 2
                                                label(class='radio')
                                                    input(type='radio' name='radios2')
                                                    span
                                                    |                                 Option 3
                                            span(class='form-text text-muted') Some help text goes here
                                    div(class='form-group')
                                        label(class='col-3 col-form-label') Default Switch
                                        div(class='col-3')
                                            span(class='switch switch-sm')
                                                label
                                                    input(type='checkbox' checked='checked' name='select')
                                                    span
                                div(class='card-footer text-right')
                                    div(class='row')
                                        div(class='col-lg-9 ml-lg-auto')
                                            button(type='submit' class='btn btn-primary font-weight-bold mr-2' name='submitButton') Validate
                                            button(type='reset' class='btn btn-light-primary font-weight-bold') Cancel


                            // end::Form
                        // end::Card
                            
                            // end::Container
                        // end::Entry



