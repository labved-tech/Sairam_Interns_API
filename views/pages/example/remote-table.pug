extends ./../../base.pug

block css-files
    //link(href='/css/pages/wizard/wizard-4.css' rel='stylesheet' type='text/css')

block js-files
    script(src='/plugins/global/axios/axios.min.js')
    script(src='/js/pages/crud/ktdatatable/example/remoteTable.js' )

block content
    #kt_content(class='content d-flex flex-column flex-column-fluid')
        include ./../../partials/_subheader/subheader-v1.pug
        // begin::Entry
        div(class='d-flex flex-column-fluid')
            // begin::Container
            div(class=" container ")
                // begin::Card
                div(class="card card-custom")
                    div(class="card-header flex-wrap border-0 pt-6 pb-0")
                        div(class="card-title")
                            h3(class="card-label")
                                | Ajax Record Selection
                                span(class="d-block text-muted pt-2 font-size-sm") ajax row selection and group actions
                        div(class="card-toolbar")
                            // begin::Dropdown
                            div(class="dropdown dropdown-inline mr-2")
                                button(type="button", class="btn btn-light-primary font-weight-bolder dropdown-toggle", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                                    span(class="svg-icon svg-icon-md")
                                        // begin::Svg Icon | path:assets/media/svg/icons/Design/PenAndRuller.svg
                                        svg(xmlns="http://www.w3.org/2000/svg", xmlns:xlink="http://www.w3.org/1999/xlink", width="24px", height="24px", viewbox="0 0 24 24", version="1.1")
                                            g(stroke="none", stroke-width="1", fill="none", fill-rule="evenodd")
                                                rect(x="0", y="0", width="24", height="24")
                                                path(d="M3,16 L5,16 C5.55228475,16 6,15.5522847 6,15 C6,14.4477153 5.55228475,14 5,14 L3,14 L3,12 L5,12 C5.55228475,12 6,11.5522847 6,11 C6,10.4477153 5.55228475,10 5,10 L3,10 L3,8 L5,8 C5.55228475,8 6,7.55228475 6,7 C6,6.44771525 5.55228475,6 5,6 L3,6 L3,4 C3,3.44771525 3.44771525,3 4,3 L10,3 C10.5522847,3 11,3.44771525 11,4 L11,19 C11,19.5522847 10.5522847,20 10,20 L4,20 C3.44771525,20 3,19.5522847 3,19 L3,16 Z", fill="#000000", opacity="0.3")
                                                path(d="M16,3 L19,3 C20.1045695,3 21,3.8954305 21,5 L21,15.2485298 C21,15.7329761 20.8241635,16.200956 20.5051534,16.565539 L17.8762883,19.5699562 C17.6944473,19.7777745 17.378566,19.7988332 17.1707477,19.6169922 C17.1540423,19.602375 17.1383289,19.5866616 17.1237117,19.5699562 L14.4948466,16.565539 C14.1758365,16.200956 14,15.7329761 14,15.2485298 L14,5 C14,3.8954305 14.8954305,3 16,3 Z", fill="#000000")
                                        // end::Svg Icon
                                    | 		Export
                                // begin::Dropdown Menu
                                div(class="dropdown-menu dropdown-menu-sm dropdown-menu-right")
                                    // begin::Navigation
                                    ul(class="navi flex-column navi-hover py-2")
                                        li(class="navi-header font-weight-bolder text-uppercase font-size-sm text-primary pb-2")
                                            | Choose an option:
                                        li(class="navi-item")
                                            a(href="#", class="navi-link")
                                                span(class="navi-icon")
                                                    i(class="la la-print")
                                                span(class="navi-text") Print
                                        li(class="navi-item")
                                            a(href="#", class="navi-link")
                                                span(class="navi-icon")
                                                    i(class="la la-copy")
                                                span(class="navi-text") Copy
                                        li(class="navi-item")
                                            a(href="#", class="navi-link")
                                                span(class="navi-icon")
                                                    i(class="la la-file-excel-o")
                                                span(class="navi-text") Excel
                                        li(class="navi-item")
                                            a(href="#", class="navi-link")
                                                span(class="navi-icon")
                                                    i(class="la la-file-text-o")
                                                span(class="navi-text") CSV
                                        li(class="navi-item")
                                            a(href="#", class="navi-link")
                                                span(class="navi-icon")
                                                    i(class="la la-file-pdf-o")
                                                span(class="navi-text") PDF
                                    // end::Navigation
                                // end::Dropdown Menu
                            // end::Dropdown
                            // begin::Button
                            a(href="#", class="btn btn-primary font-weight-bolder")
                                span(class="svg-icon svg-icon-md")
                                    // begin::Svg Icon | path:assets/media/svg/icons/Design/Flatten.svg
                                    svg(xmlns="http://www.w3.org/2000/svg", xmlns:xlink="http://www.w3.org/1999/xlink", width="24px", height="24px", viewbox="0 0 24 24", version="1.1")
                                        g(stroke="none", stroke-width="1", fill="none", fill-rule="evenodd")
                                            rect(x="0", y="0", width="24", height="24")
                                            circle(fill="#000000", cx="9", cy="15", r="6")
                                            path(d="M8.8012943,7.00241953 C9.83837775,5.20768121 11.7781543,4 14,4 C17.3137085,4 20,6.6862915 20,10 C20,12.2218457 18.7923188,14.1616223 16.9975805,15.1987057 C16.9991904,15.1326658 17,15.0664274 17,15 C17,10.581722 13.418278,7 9,7 C8.93357256,7 8.86733422,7.00080962 8.8012943,7.00241953 Z", fill="#000000", opacity="0.3")
                                    // end::Svg Icon
                                | 	New Record
                            // end::Button
                    div(class="card-body")
                        // begin: Search Form
                        // begin::Search Form
                        div(class="mb-7")
                            div(class="row align-items-center")
                                div(class="col-lg-9 col-xl-8")
                                    div(class="row align-items-center")
                                        div(class="col-md-4 my-2 my-md-0")
                                            div(class="input-icon")
                                                input#kt_datatable_search_query_2(type="text", class="form-control", placeholder="Search...")
                                                span
                                                    i(class="flaticon2-search-1 text-muted")
                                        div(class="col-md-4 my-2 my-md-0")
                                            div(class="d-flex align-items-center")
                                                label(class="mr-3 mb-0 d-none d-md-block") Status:
                                                select#kt_datatable_search_status_2(class="form-control")
                                                    option(value="") All
                                                    option(value="1") Pending
                                                    option(value="2") Delivered
                                                    option(value="3") Canceled
                                                    option(value="4") Success
                                                    option(value="5") Info
                                                    option(value="6") Danger
                                        div(class="col-md-4 my-2 my-md-0")
                                            div(class="d-flex align-items-center")
                                                label(class="mr-3 mb-0 d-none d-md-block") Type:
                                                select#kt_datatable_search_type_2(class="form-control")
                                                    option(value="") All
                                                    option(value="1") Online
                                                    option(value="2") Retail
                                                    option(value="3") Direct
                                div(class="col-lg-3 col-xl-4 mt-5 mt-lg-0")
                                    a(href="#", class="btn btn-light-primary px-6 font-weight-bold")
                                        | Search
                        // end::Search Form
                        // end: Search Form
                        // begin: Selected Rows Group Action Form
                        #kt_datatable_group_action_form_2(class="mt-10 mb-5 collapse")
                            div(class="d-flex align-items-center")
                                div(class="font-weight-bold text-danger mr-3")
                                    | Selected 
                                    span#kt_datatable_selected_records_2 0
                                    |  records:
                                div(class="dropdown mr-2")
                                    button(type="button", class="btn btn-primary btn-sm dropdown-toggle", data-toggle="dropdown")
                                        | Update status
                                    div(class="dropdown-menu dropdown-menu-sm")
                                        ul(class="nav nav-hover flex-column")
                                            li(class="nav-item")
                                                a(href="#", class="nav-link")
                                                    span(class="nav-text") Pending
                                            li(class="nav-item")
                                                a(href="#", class="nav-link")
                                                    span(class="nav-text") Delivered
                                            li(class="nav-item")
                                                a(href="#", class="nav-link")
                                                    span(class="nav-text") Canceled
                                button#kt_datatable_delete_all_2(class="btn btn-sm btn-danger mr-2", type="button")
                                    | Delete All
                                button(class="btn btn-sm btn-success", type="button", data-toggle="modal", data-target="#kt_datatable_fetch_modal_2")
                                    | Fetch Selected Records
                        // end: Selected Rows Group Action Form
                        // begin: Datatable
                        #kt_datatable_2(class="datatable datatable-bordered datatable-head-custom")
                        // end: Datatable
                // end::Card
            // end::Container

        // end::Entry

