extends ./../../base.pug

block css-files
    link(href='/plugins/custom/jstree/jstree.bundle.css' rel='stylesheet' type='text/css')

block js-files
    script(src='/plugins/custom/jstree/jstree.bundle.js')
    script(src='/js/pages/crud/myForm/menu/menuForm.js' )

block content
