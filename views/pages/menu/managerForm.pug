        include ./../../partials/_subheader/subheader-v1.pug
        // begin::Entry
        div(class='d-flex flex-column-fluid')
            // begin::Container
            div(class='container')
                div(class='row')
                    div(class='col-lg-4')
                        // begin::Card
                        div(class='card card-custom menu menu-compact gutter-b')
                            div(class='card-header')
                                div(class='card-title')
                                    h3(class='card-label')
                                        | Preview
                                div(class='card-toolbar')
                                    div(class='menu-tools justify-content-center')
                                        span(class='menu-toggle' data-toggle='tooltip' title='View code')
                            div(class='card-body')
                                #kt_tree_1(class='tree-demo')
                                    ul
                                        li
                                            | Root node 1
                                            ul
                                                li(data-jstree='{ "selected" : true }')
                                                    a(href='javascript:;')
                                                        | Initially selected
                                                li(data-jstree='{ "icon" : "flaticon2-gear text-success " }')
                                                    | custom icon URL
                                                li(data-jstree='{ "opened" : true }')
                                                    | initially open
                                                    ul
                                                        li(data-jstree='{ "disabled" : true }')
                                                            | Disabled Node
                                                        li(data-jstree='{ "type" : "file" }')
                                                            | Another node
                                                li(data-jstree='{ "icon" : "flaticon2-rectangular text-danger" }')
                                                    | Custom icon class (bootstrap)
                                        li(data-jstree='{ "type" : "file" }')
                                            a(href='http://www.keenthemes.com')
                                                | Clickable link node
                        // end::Card

