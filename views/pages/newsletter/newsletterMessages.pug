extends ./../../base.pug

block css-files
    link(href='/css/pages/wizard/wizard-4.css' rel='stylesheet' type='text/css')

block js-files
    script(src='/js/KTAppSettings.js')
    script(src='/plugins/global/axios/axios.min.js')
    script(src='/js/pages/newsletter/  .js')
block content
    #kt_content(class='content d-flex flex-column flex-column-fluid')
        include ./../../partials/_subheader/subheader-v1.pug
        // begin::Entry
        div(class='d-flex flex-column-fluid')
            // begin::Container
            div(class='container')
                // begin::Card
                div(class='card card-custom')
                    div(class='card-header')
                        h3(class='card-title')
                            | Newsletter Messages Form 
                    div(class='card-body')
                        // begin::Form
                        form#form_newsletterMessages(class='form')
                            div(class='row')
                                div(class='col-xl-2')
                                div(class='col-xl-6')
                                    div(class='my-5')
                                        h3(class=' text-dark font-weight-bold mb-10') General
                                        div(class='form-group row')
                                            label(class='col-3 form-control-label') Newsletter Id
                                            div(class='col-9')
                                                input#newsletterId(type='text' class='form-control' name='newsletterId' placeholder='ex: 5fa6574d564cd01840c6cfd9')
                                        div(class='form-group row')
                                            label(class='col-3 form-control-label') Subject
                                            div(class='col-9')
                                                input#subject(type='text' class='form-control' name='subject' placeholder='ex: Enter Subject')
                                        div(class='form-group row mb')
                                            label(class='col-3' for='messageTextArea')
                                                | Message 
                                            div(class='col-9')
                                                textarea#messageTextArea(class='form-control' rows='3' name='messageTextArea')
                                        div(class='form-group row')
                                            label(class='col-3 form-control-label') Recipient Email
                                            div(class='col-9')
                                                input#recipientEmail(type='text' class='form-control' name='recipientEmail' placeholder='ex. recipient@gmail.com')
                                        div(class='form-group row')
                                            label(class='col-3 col-form-label') Sent
                                            div(class='col-9')
                                                span(class='switch switch-sm')
                                                    label
                                                        input#sent(type='checkbox' checked='checked' name='sent')
                                                        span
                                        div(class='form-group row')
                                            label(class='col-3 col-form-label') Visited
                                            div(class='col-9')
                                                span(class='switch switch-sm')
                                                    label
                                                        input#visited(type='checkbox' checked='checked' name='visited')
                                                        span
                                        div(class='form-group row')
                                            label(class='col-3 form-control-label') Last Visited
                                            div(class='col-9')
                                                input#lastVisited(type='text' class='form-control' name='lastVisited' placeholder='ex. dd/mm/yyyy')
                            div(class='card-footer text-right')
                                div(class='row')
                                    div(class='col-lg-9 ml-lg-auto')
                                        button#submitButton(type='submit' class='btn btn-primary font-weight-bold mr-2' name='submitButton') Submit
                                        button(type='reset' class='btn btn-light-primary font-weight-bold') Cancel
                        // end::Form
                // end::Card
            // end::Container
        // end::Entry
