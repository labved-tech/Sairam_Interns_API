extends ./../../base.pug

block css-files
    link(href='/css/pages/wizard/wizard-4.css' rel='stylesheet' type='text/css')

block js-files
    script(src='/plugins/global/axios/axios.min.js')
    script(src='/js/pages/crud/myForm/rating/ratngAttribute.js' )
    

block content
    #kt_content(class='content d-flex flex-column flex-column-fluid')
        include ./../../partials/_subheader/subheader-v1.pug
        // begin::Entry
        div(class='d-flex flex-column-fluid')
            // begin::Container
            div(class='container')
                // begin::Card
                div(class='card card-custom')
                    div(class='card-header')
                        h3(class='card-title')
                            | Rating Attribute Form
                    div(class='card-body')
                        // begin::Form
                        form#form_form(class='form' action='http://localhost:3000/api/v1/formResponse')
                            div(class='row')
                                div(class='col-xl-2')
                                div(class='col-xl-8')
                                    div(class='my-5')  
                                        h3(class=' text-dark font-weight-bold mb-10') General
                                        // text
                                        div(class='form-group row')
                                            label(class='col-3 col-form-label form-control-label text-right') Name
                                                span(class='text-danger')  *
                                            div(class='col-6')
                                                input#raname(type='text' class='form-control' name='name' placeholder='ex. Vignesh')
                                                span(class='form-text text-muted') Enter your name

                                        // Dropdown List : Single Select2 w Live Search
                                        div(class='form-group row')
                                            label(class='col-3 col-form-label form-control-label text-right') Type
                                            div(class=' col-4')
                                                select#ratype(class='form-control select2' name='type')
                                                    option(value='AK') Alaska
                                                    option(value='HI') Hawaii
                                                    option(value='CA') California
                                                    option(value='NV') Nevada
                                                    option(value='OR') Oregon
                                                    option(value='WA') Washington
                                                    option(value='AZ') Arizona
                                                    option(value='CO') Colorado
                                                    option(value='ID') Idaho
                                                    option(value='MT') Montana
                                                    option(value='NE') Nebraska
                                                span(class='form-text text-muted') Enter the type

                                        // Text Area
                                        div(class='form-group row mb-1')
                                            label(class='col-3 col-form-label form-control-label text-right' for='demoTextarea')
                                                | Desscription
                                                span(class='text-danger') *
                                            div(class='col-9 ')
                                                textarea#radescription(class='form-control' name='demoTextarea' rows='3')
                                                span(class='form-text text-muted') description

                                        // Text Area
                                        div(class='form-group row mb-1')
                                            label(class='col-3 col-form-label form-control-label text-right' for='demoTextarea')
                                                | Notes
                                                span(class='text-danger') *
                                            div(class='col-9 ')
                                                textarea#radescription(class='form-control' name='notes' rows='3')
                                                span(class='form-text text-muted') Enter your notes
                            div(class='card-footer')
                                div(class='row text-right')
                                    div(class='col-12 ml-lg-auto')
                                        button#submitButton(type='submit' class='btn btn-primary font-weight-bold mr-2') Submit
                                        button(type='reset' class='btn btn-light-primary font-weight-bold') Cancel
                        // end::Form
                // end::Card
            // end::Container
        // end::Entry


