extends ./../../base.pug

block css-files

block js-files
    script(src='/js/pages/crud/myPages/rating/rating.js')


block content
    #kt_content(class='content d-flex flex-column flex-column-fluid')
        include ./../../partials/_subheader/subheader-v1.pug
        // begin::Entry
        div(class='d-flex flex-column-fluid')
            // begin::Container
            div(class='container')
                        // begin::Card
                        div(class="card card-custom gutter-b")
                            div(class="card-header flex-wrap border-0 pt-6 pb-0")
                                div(class="card-title")
                                    h3(class="card-label")
                                        | Rating Attribute
                                        span(class="d-block text-muted pt-2 font-size-sm") ajax row selection and group actions
                                div(class="card-toolbar")
                                    // begin::Dropdown
                                    div(class='dropdown dropdown-inline mr-2')
                                        button(type='button' class='btn btn-light-primary font-weight-bolder dropdown-toggle' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                                            i(class='fas fa-file-export')
                                            |  Export
                                        // begin::Dropdown Menu
                                        div(class="dropdown-menu dropdown-menu-sm dropdown-menu-right")
                                            // begin::Navigation
                                            ul(class="navi flex-column navi-hover py-2")
                                                li(class="navi-header font-weight-bolder text-uppercase font-size-sm text-primary pb-2")
                                                    | Choose an option:
                                                li(class="navi-item")
                                                    a(href="#", class="navi-link")
                                                        span(class="navi-icon")
                                                            i(class="fas fa-print")
                                                        span(class="navi-text") Print
                                                li(class="navi-item")
                                                    a(href="#", class="navi-link")
                                                        span(class="navi-icon")
                                                            i(class="fas fa-copy")
                                                        span(class="navi-text") Copy
                                                li(class="navi-item")
                                                    a(href="#", class="navi-link")
                                                        span(class="navi-icon")
                                                            i(class="fas fa-file-excel")
                                                        span(class="navi-text") Excel
                                                li(class="navi-item")
                                                    a(href="#", class="navi-link")
                                                        span(class="navi-icon")
                                                            i(class="fas fa-file-csv")
                                                        span(class="navi-text") CSV
                                                li(class="navi-item")
                                                    a(href="#", class="navi-link")
                                                        span(class="navi-icon")
                                                            i(class="fas fa-file-pdf")
                                                        span(class="navi-text") PDF
                                            // end::Navigation
                                        // end::Dropdown Menu
                                    // end::Dropdown
                                    // begin::Button
                                    // Button trigger modal
                                    button#btnOpenRaModal(type='button' class='btn btn-primary font-weight-bolder btnAdd')
                                        | Add New

                            div(class="card-body")
                                // begin::Search Form
                                div(class="mb-7")
                                    div(class="row align-items-center")
                                        div(class="col-lg-9 col-xl-8")
                                            div(class="row align-items-center")
                                                div(class="col-md-4 my-2 my-md-0")
                                                    div(class="input-icon")
                                                        input#tableRa_search_query_2(type="text", class="form-control", placeholder="Search...")
                                                        span
                                                            i(class="flaticon2-search-1 text-muted")
                                                div(class="col-md-4 my-2 my-md-0")
                                                    div(class="d-flex align-items-center")
                                                        label(class="mr-3 mb-0 d-none d-md-block") Status:
                                                        select#tableRa_search_status_2(class="form-control")
                                                            option(value="") All
                                                            option(value="1") Pending
                                                            option(value="2") Delivered
                                                            option(value="3") Canceled
                                                            option(value="4") Success
                                                            option(value="5") Info
                                                            option(value="6") Danger
                                                div(class="col-md-4 my-2 my-md-0")
                                                    div(class="d-flex align-items-center")
                                                        label(class="mr-3 mb-0 d-none d-md-block") Type:
                                                        select#tableRa_search_type_2(class="form-control")
                                                            option(value="") All
                                                            option(value="1") Online
                                                            option(value="2") Retail
                                                            option(value="3") Direct
                                        div(class="col-lg-3 col-xl-4 mt-5 mt-lg-0")
                                            a(href="#", class="btn btn-light-primary px-6 font-weight-bold")
                                                | Search
                                // end::Search Form
                                // begin: Selected Rows Group Action Form
                                #tableRa_group_action_form_2(class="mt-10 mb-5 collapse")
                                    div(class="d-flex align-items-center")
                                        div(class="font-weight-bold text-danger mr-3")
                                            | Selected 
                                            span#tableRa_selected_records_2 0
                                            |  records:
                                        div(class="dropdown mr-2")
                                            button(type="button", class="btn btn-primary btn-sm dropdown-toggle", data-toggle="dropdown")
                                                | Update status
                                            div(class="dropdown-menu dropdown-menu-sm")
                                                ul(class="nav nav-hover flex-column")
                                                    li(class="nav-item")
                                                        a(href="#", class="nav-link")
                                                            span(class="nav-text") Pending
                                                    li(class="nav-item")
                                                        a(href="#", class="nav-link")
                                                            span(class="nav-text") Delivered
                                                    li(class="nav-item")
                                                        a(href="#", class="nav-link")
                                                            span(class="nav-text") Canceled
                                        button#btnDeleteAll(class="btn btn-sm btn-danger mr-2 btnDeleteAll", type="button")
                                            | Delete All
                                        button(class="btn btn-sm btn-success", type="button", data-toggle="modal", data-target="#tableRa_fetch_modal_2")
                                            | Fetch Selected Records
                                // end: Selected Rows Group Action Form
                                // begin: Datatable
                                #tableRa(class="datatable datatable-bordered datatable-head-custom")
                                // end: Datatable
                        // end::Card

                        // ##################################### RaFormModal ############################################################################################
                        #modalRa(class='modal fade' data-backdrop='static' data-keyboard='true' tabindex='-1' role='dialog' aria-labelledby='RaModalLabel' aria-hidden='true')
                            div(class='modal-dialog modal-dialog-top modal-xl modal-dialog-scrollable' role='document')
                                div(class='modal-content')
                                    // begin::Form
                                    form#formRa(class='form')
                                        div(class='modal-header')
                                            h5(class='modal-title') Add New
                                            button(type='button' class='close btnClose' data-dismiss='modal' aria-label='Close')
                                                i(aria-hidden='true' class='ki ki-close')
                                        div(class='modal-body')
                                            div(data-scroll='true' data-height='350')
                                                // RaId - hidden
                                                div(class= 'form-group row')
                                                    input#raId(type='hidden' name='eaId')

                                                // raName
                                                div(class='form-group row')
                                                    label(class='col-3 col-form-label form-control-label text-right') Name
                                                        span(class='text-danger')  *
                                                    div(class='col-6')
                                                        input#raName(type='text' class='form-control' name='raName' placeholder='ex. Vignesh')
                                                        span(class='form-text text-muted') Enter your name

                                                // raType
                                                div(class='form-group row')
                                                    label(class='col-3 col-form-label form-control-label text-right') Type
                                                    div(class=' col-4')
                                                        select#raType(class='form-control select2' name='raType')
                                                            option(value='AK') Alaska
                                                            option(value='HI') Hawaii
                                                            option(value='CA') California
                                                            option(value='NV') Nevada
                                                            option(value='OR') Oregon
                                                            option(value='WA') Washington
                                                            option(value='AZ') Arizona
                                                            option(value='CO') Colorado
                                                            option(value='ID') Idaho
                                                            option(value='MT') Montana
                                                            option(value='NE') Nebraska
                                                        span(class='form-text text-muted') Enter the type

                                                // raDescription
                                                div(class='form-group row')
                                                    label(class='col-3 col-form-label form-control-label text-right') Description
                                                    div(class='col-9')
                                                        div#raDescription(class='summernote' name='raDescription')
                                                        span(class='form-text text-muted') Add message that you wish to send.

                                                // raNotes
                                                div(class='form-group row mb-1')
                                                    label(class='col-3 col-form-label form-control-label text-right' for='raNotes')
                                                        | Notes
                                                        span(class='text-danger') *
                                                    div(class='col-9 ')
                                                        textarea#raNotes(class='form-control' name='raNotes' rows='3')
                                                        span(class='form-text text-muted') Enter your notes
                                                
                                        div(class='modal-footer')
                                            button#btnResetRaForm(type='reset' class='btn btn-light-primary font-weight-bold btnReset') Reset
                                            button#btnAddNewRaFormSubmitButton(class='btn btn-primary font-weight-bold btnAdd') Add
                                            button#btnSaveRaFormSubmitButton(class='btn btn-primary font-weight-bold btnSave') Save changes