extends ./../../base.pug

block css-files

block js-files
    script(src='/plugins/global/axios/axios.min.js')
    script(src='/js/pages/crud/myForm/ticket-support/ticket-supportForm.js' )

block content
    #kt_content(class='content d-flex flex-column flex-column-fluid')
        include ./../../partials/_subheader/subheader-v1.pug
        // begin::Entry
        div(class='d-flex flex-column-fluid')
            // begin::Container
            div(class='container')
                // begin::Card
                div(class='card card-custom')
                    div(class='card-header')
                        h3(class='card-title')
                            | ticketCategories Form
                    div(class='card-body')
                        // begin::Form
                        form#createTicketCategoriesForm(class='form')
                            div(class='row')
                                div(class='col-xl-2')
                                div(class='col-xl-8')
                                    div(class='my-5')

                                        //tcName
                                        div(class='form-group row')
                                            label(class='col-3 col-form-label form-control-label text-right') Name
                                                span(class='text-danger')  *                                            
                                            div(class='col-6')
                                                input#tcName(type='text' class='form-control' name='tcName' placeholder='ex. Sai Vignesh')

                                        // tcDescription
                                        div(class='form-group row mb-1')
                                            label(class='col-3 col-form-label form-control-label text-right' for='neDescription')
                                                | Description
                                                span(class='text-danger') *
                                            div(class='col-7 ')
                                                textarea#tcDescription(class='form-control' name ='tcDescription' rows='3')
                                                span(class='form-text text-muted') Add Description

                                        // tcNotes
                                        div(class='form-group row mb-1')
                                            label(class='col-3 col-form-label form-control-label text-right' for='neNotes')
                                                | Notes
                                                span(class='text-danger')
                                            div(class='col-7 ')
                                                textarea#tcNotes(class='form-control' name='neNotes' rows='3')
                                                span(class='form-text text-muted') Add Notes

                            div(class='card-footer')
                                div(class='row text-right')
                                    div(class='col-12 ml-lg-auto')
                                        button#submitButton(type='submit' class='btn btn-primary font-weight-bold mr-2') Submit
                                        button(type='reset' class='btn btn-light-primary font-weight-bold') Cancel
                        // end::Form
                // end::Card
            // end::Container
        // end::Entry
