doctype html
html(lang='en')
	// begin::Head
	head
		base(href='../../../../')
		meta(charset='utf-8')
		title Metronic | Sign In
		meta(name='description' content='Singin page example')
		meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
		// begin::Fonts
		link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700')
		// end::Fonts
		// begin::Page Custom Styles(used by this page)
		link(href='/css/pages/login/login-3.css' rel='stylesheet' type='text/css')
		// end::Page Custom Styles
		// begin::Global Theme Styles(used by all pages)
		link(href='/plugins/global/plugins.bundle.css' rel='stylesheet' type='text/css')
		link(href='/plugins/custom/prismjs/prismjs.bundle.css' rel='stylesheet' type='text/css')
		link(href='/css/style.bundle.css' rel='stylesheet' type='text/css')
		// end::Global Theme Styles
		// begin::Layout Themes(used by all pages)
		link(href='/css/themes/layout/header/base/light.css' rel='stylesheet' type='text/css')
		link(href='/css/themes/layout/header/menu/light.css' rel='stylesheet' type='text/css')
		link(href='/css/themes/layout/brand/dark.css' rel='stylesheet' type='text/css')
		link(href='/css/themes/layout/aside/dark.css' rel='stylesheet' type='text/css')
		// end::Layout Themes
		link(rel='shortcut icon' href='/media/logos/favicon.ico')
	// end::Head
	// begin::Body
	body#kt_body(class='header-fixed header-mobile-fixed subheader-enabled subheader-fixed subheader-mobile-fixed aside-enabled aside-fixed aside-minimize-hoverable page-loading')
		// begin::Main
		div(class='d-flex flex-column flex-root')
			// begin::Login
			div(class='login login-3 wizard d-flex flex-column flex-lg-row flex-column-fluid')
				// begin::Aside
				div(class='login-aside d-flex flex-column flex-row-auto')
					// begin::Aside Top
					div(class='d-flex flex-column-auto flex-column pt-lg-40 pt-15')
						// begin::Aside header
						a(href='#' class='login-logo text-center pt-lg-25 pb-10')
							img(src='/media/logos/logo-1.png' class='max-h-70px' alt='')
						// end::Aside header
						// begin::Aside Title
						h3(class='font-weight-bolder text-center font-size-h4 text-dark-50 line-height-xl')
							| User Experience & Interface Design
							br
							|                 Strategy SaaS Solutions
						// end::Aside Title
					// end::Aside Top
					// begin::Aside Bottom
					div(class='aside-img d-flex flex-row-fluid bgi-no-repeat bgi-position-x-center' style='background-position-y: calc(100% + 5rem); background-image: url(/media/svg/illustrations/login-visual-5.svg)')
					// end::Aside Bottom
				// begin::Aside
				// begin::Content
				div(class='login-content flex-row-fluid d-flex flex-column p-10')
					// begin::Top
					div(class='text-right d-flex justify-content-center')
						div(class='top-signin text-right d-flex justify-content-end pt-5 pb-lg-0 pb-10')
							span(class='font-weight-bold text-muted font-size-h4') Having issues?
							a#kt_login_signup(href='javascript:;' class='font-weight-bold text-primary font-size-h4 ml-2') Get Help
					// end::Top
					// begin::Wrapper
					div(class='d-flex flex-row-fluid flex-center')
						// begin::Signin
						div(class='login-form')
							// begin::Form
							form#loginForm(class='form')
								// begin::Title
								div(class='pb-5 pb-lg-15')
									h3(class='font-weight-bolder text-dark font-size-h2 font-size-h1-lg') Sign In
									div(class='text-muted font-weight-bold font-size-h4')
										| New Here?
										a(href='signup' class='text-primary font-weight-bolder')  Create Account
								// begin::Title
								// begin::Form group
								div(class='form-group')
									label(class='font-size-h6 font-weight-bolder text-dark') Email
									input#loginEmail(class='form-control h-auto py-7 px-6 rounded-lg border-0' type='text' name='loginEmail' autocomplete='off')
								// end::Form group
								// begin::Form group
								div(class='form-group')
									div(class='d-flex justify-content-between mt-n5')
										label(class='font-size-h6 font-weight-bolder text-dark pt-5') Password
										a(href='custom/pages/login/login-3/forgot.html' class='text-primary font-size-h6 font-weight-bolder text-hover-primary pt-5')
											| Forgot Password ?
									input#loginPassword(class='form-control h-auto py-7 px-6 rounded-lg border-0' type='password' name='loginPassword' autocomplete='off')
								// end::Form group
								// begin::Action
								div(class='pb-lg-0 pb-5 text-right')
									button#loginSubmitButton(type='submit' class='btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-3') Sign In
								// end::Action
							// end::Form
						// end::Signin
					// end::Wrapper
				// end::Content
			// end::Login
		// end::Main
		// begin::Global Config(global config for global JS scripts)
		// end::Global Config

		// begin::Global Theme Bundle(used by all pages)
		script(src='/plugins/global/plugins.bundle.js')
		script(src='/plugins/custom/prismjs/prismjs.bundle.js')
		script(src='/js/scripts.bundle.js')
		// end::Global Theme Bundle

		// begin::Page Scripts(used by this page)
		script(src='/js/KTAppSettings.js')
		script(src='/plugins/global/axios/axios.min.js')
		script(src='/js/pages/crud/forms/users/login-3.js')
		// end::Page Scripts
	// end::Body
